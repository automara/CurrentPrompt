{
  "name": "currentprompt",
  "version": "2.0.0",
  "description": "Automated markdown module publishing with Webflow CMS integration",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "node --loader ts-node/esm src/index.ts",
    "build": "tsc && npm run build:frontend",
    "build:frontend": "cd frontend && npm install && npm run build",
    "start": "NODE_ENV=production node dist/index.js",
    "watch": "node dist/watcher.js",
    "test": "jest",
    "test:env": "node --loader ts-node/esm tests/setup.ts",
    "test:integration": "jest tests/integration.test.ts",
    "test:security": "jest tests/security.test.ts",
    "test:errors": "jest tests/errors.test.ts",
    "test:all": "npm run test:env && npm run test",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/"
  },
  "keywords": [
    "knowledge",
    "prompts",
    "markdown",
    "modules"
  ],
  "author": "Keith Armstrong",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/openai": "^2.0.67",
    "@mastra/core": "^0.24.1",
    "@mastra/openai": "^1.0.1-alpha.48",
    "@supabase/supabase-js": "^2.39.8",
    "ai": "^5.0.93",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.32.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^6.9.0",
    "openrouter-sdk": "^1.0.9",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
